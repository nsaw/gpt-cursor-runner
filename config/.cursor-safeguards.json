  },
  "tagValidation": {
    "requireGPTApproval": true,
    "requireNickApproval": true,
    "preventAgentSelfVerify": true,
    "enforceDryRunFirst": true
  },
  "loggingPolicy": {
    "dispatchLogging": true,
    "pingCommandVerified": true,
    "logFile": "logs/ghost-dispatch.log",
    "logSuccessPattern": "âœ… Ping sent to Slack",
    "logFailurePattern": "Slack send fail",
