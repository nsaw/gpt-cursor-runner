[flake8]
max-line-length = 120
extend-ignore = E203, W503
select = C,E,F,W,B,B950
# B950 = "line too long" but smarter than E501; pairs well with Black at 120
max-complexity = 10
exclude =
    .git,
    .github,
    .*.cache,
    .archive,
    .vscode,
    node_modules,
    .cursor,
    tmp,
    __pycache__,
    old,
    build,
    dist
